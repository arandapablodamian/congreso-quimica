{% extends 'security.html.twig' %}

{% block title %}{{ 'Log in'|trans() }} {{ parent() }}{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="checkbox mb-3">{{ 'You are logged in as'|trans() }} {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">{{ 'Enter'|trans() }}</h1>
        <div class="form-group">
            <label for="inputEmail" class="sr-only">{{ 'Email'|trans() }}</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="{{ 'Email'|trans() }}" required autofocus>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="sr-only">{{ 'Password'|trans() }}</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="{{ 'Password'|trans() }}" required>
        </div>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">
            {{ 'Log in'|trans() }}
        </button>
    </form>
{% endblock %}
